{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/postgres-index.js",
      "use": "@vercel/node"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.kitmoji.net"
        }
      ],
      "destination": "https://kitmoji.net/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/postgres-index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}