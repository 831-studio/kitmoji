{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/postgres-index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap.xml.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/postgres-index.js"
    },
    {
      "src": "/robots.txt", 
      "dest": "/dist/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}